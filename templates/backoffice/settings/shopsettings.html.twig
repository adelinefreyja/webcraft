{% block title %}Paramétrer ma boutique :: Webcraft :: Craft magic websites within minutes !{% endblock %}

{% block specificcss %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/setup.css') }}" />
	<link rel="stylesheet" type="text/css" href="{{ asset('css/backoffice.css') }}" />

{% endblock %}


{% block content %}
<div class="container-fluid">
	<div class="row">
		<div class="col s12 brown-text">
			<h4 class="dashboard"><i class="fas fa-sliders-h fa-lg"></i> Paramètres E-commerce</h4>
			<hr class="left account" />
		</div>
	</div>
</div>
<div class="container brown-text">
	<div class="row">
		<div class="col s12 m4">
			<div class="card-panel center brown-text">
				<i class="far fa-plus-square fa-3x orange-text"></i>
				<h5 class="promo-caption">
					Taxes
				</h5>
				<hr class="account" /><br />
				<p class="light-caption">
					<a href="{{ path('managetaxes') }}" class="btn orange lighten-2 brown-text">Ajouter / Gérer</a>
				</p>
			</div>
		</div>
		<div class="col s12 m4">
			<div class="card-panel center brown-text">
				<i class="far fa-credit-card fa-3x orange-text"></i>
				<h5 class="promo-caption">
					Méthodes de paiement
				</h5>
				<hr class="account" /><br />
				<p class="light-caption">
					<a href="{{ path('paymentmethods') }}" class="btn orange lighten-2 brown-text">Ajouter / Gérer</a>
				</p>
			</div>
		</div>
		<div class="col s12 m4">
			<div class="card-panel center brown-text">
				<i class="fas fa-list fa-3x orange-text"></i>
				<h5 class="promo-caption">
					Méthodes d'expédition
				</h5>
				<hr class="account" /><br />
				<p class="light-caption">
					<a href="{{ path('shipments') }}" class="btn orange lighten-2 brown-text"> Ajouter / Gérer</a>
				</p>
			</div>
		</div>
	</div>
</div>
