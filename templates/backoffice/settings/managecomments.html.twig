{% block content %}
<div class="container-fluid brown-text">
	<div class="row">
		<div class="col s12">
			<h4 class="dashboard"><i class="fas fa-wrench fa-lg"></i> Avis et commentaires</h4>
			<hr class="left account" /> 
		</div>
	</div>

	<div class="row">

		<div class="col s12">

			<table class="responsive-table striped bordered">
				  <tr>
						  <th>Commentaire sur le produit</th>
						  <th>Id du produit commenter</th>
						  <th>Commentaire sur l'adresse ajouter</th>
					      <th>Id de l'adresse utilisateur</th>
				  </tr>

			    {% for comment in productsComments %}
			        <tr>
					        <td>{{ comment.commentText  }}</td>
					        <td>{{ comment.product }}</td>
			        </tr>

	 		    {% endfor %}

			    {% for comment in userAddress %}

							      <td>{{ comment.userComment }}</td>
							      <td>{{ comment.userAddressId }}</td>

			    {% endfor %}
          </table>
		</div>
	</div>
</div>
{% endblock %}

