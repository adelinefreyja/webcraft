{% extends 'backoffice/index.html.twig' %}

{% block title %}Dashboard :: WebCraft :: Make magic websites within minutes !{% endblock %}

{% block specificcss %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/setup.css') }}" />
	<link rel="stylesheet" type="text/css" href="{{ asset('css/backoffice.css') }}" />
{% endblock %}
	
{% block content %}
	<div class="container-fluid brown-text">
        <div class="row">
            <div class="row col m12 l6">
                <div class="col m12">
                    <h4 class="dashboard"><i class="fas fa-th fa-lg"></i> Mon tableau de bord</h4>
                    <hr class="left account">
                </div>
                <div class="col m12">
                    <div class="card-panel brown lighten-4">
                        <h6><i class="fas fa-info-circle fa-lg"></i>
                            Bienvenue, {{ app.user.username }}!
                        </h6>
                        <p>Ceci est votre tableau de bord. C'est un espace dédié aux derniers événements survenus sur votre site (un commentaire, un message reçu ?)</p>
                    </div>
                </div>
            </div>
            <div class="row col m12 l6">
                <div class="col s12">
                    <h4 class="dashboard"><i class="far fa-chart-bar fa-lg"></i> Mes statistiques</h4>
                    <hr class="left account" />
                </div>
                <div class="col s12">
                    <div class="row">
                        <div class="col m3 s6">
                            <div class="card-panel center">
                                <h3 class="orange-text">{{ pages|length }}</h3>
                                <hr class="account" />
                                <p>Pages</p>
                            </div>
                        </div>
                        <div class="col m3 s6">
                            <div class="card-panel center">
                                <h3 class="orange-text">{{ medias|length }}</h3>
                                <hr class="account" />
                                {% if medias|length <= 1 %}
                                    <p>Média</p>
                                {% elseif medias|length > 1 %}
                                    <p>Médias</p>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col m3 s6">
                            <div class="card-panel center">
                                <h3 class="orange-text">{{ products|length }}</h3>
                                <hr class="account" />
                                {% if products|length <= 1 %}
                                    <p>Produit</p>
                                {% elseif products|length > 1 %}
                                    <p>Produits</p>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col m3 s6">
                            <div class="card-panel center">
                                <h3 class="orange-text">{{ orders|length }}</h3>
                                <hr class="account" />
                                <p>Commandes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

		{% if (sitetype == true) or (sitetype == false) %}

        <div class="row">
            <div class="col l6 m12">
                <div class="row col s12">
                    <div class="col m4 s12">
                        <a href="{{ path('newpage') }}">
                            <div class="card-panel orange lighten-2 center brown-text">
                                <p><i class="far fa-plus-square fa-3x"></i></p>
                                <h5>Créer une page</h5>
                            </div>
                        </a>
                    </div>
                    <div class="col m4 s12">
                        <a href="{{ path('design') }}">
                            <div class="card-panel orange lighten-2 center brown-text">
                                <p><i class="fas fa-paint-brush fa-3x"></i></p>
                                <h5>Personnaliser mon site</h5>
                            </div>
                        </a>
                    </div>
                    <div class="col m4 s12">
                        <a href="{{ path('design') }}">
                            <div class="card-panel orange lighten-2 center brown-text">
                                <p><i class="far fa-images fa-3x"></i></p>
                                <h5>Biblitothèque de médias</h5>
                            </div>
                        </a>
                    </div>
                </div>
                {% endif %}
                <div class="col s12">
                    {% if sitetype == true %}
                    <div class="row col s12">
                        <div class="col m4 s12">
                            <a href="{{ path('manageproducts') }}">
                                <div class="card-panel orange lighten-2 center brown-text">
                                    <p><i class="fas fa-barcode fa-3x"></i></p>
                                    <h5>Gérer mes produits</h5>
                                </div>
                            </a>
                        </div>
                        <div class="col m4 s12">
                            <a href="{{ path('manageorders') }}">
                                <div class="card-panel orange lighten-2 center brown-text">
                                    <p><i class="fas fa-cart-arrow-down fa-3x"></i></p>
                                    <h5>Gérer mes commandes</h5>
                                </div>
                            </a>
                        </div>
                        <div class="col m4 s12">
                            <a href="{{ path('customers') }}">
                                <div class="card-panel orange lighten-2 center brown-text">
                                    <p><i class="fas fa-users fa-3x"></i></p>
                                    <h5>Voir mes clients</h5>
                                </div>
                            </a>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            {% if sitetype == true %}
            <div class="col l6 m12">
                <h5>Derniers commentaires</h5>
                <hr class="left account" />
            </div>
            {% endif %}
        </div>
	</div>
{% endblock %}
