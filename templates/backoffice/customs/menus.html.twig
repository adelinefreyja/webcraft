{% extends 'backoffice/index.html.twig' %}

{% block title %}Créer mon menu :: Webcraft :: Craft magic websites within minutes !{% endblock %}

{% block specificcss %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/setup.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('css/backoffice.css') }}">
{% endblock %}


{% block content %}
<div class="container-fluid">
	<div class="row">
		<div class="col s6">
			<h4 class="dashboard brown-text"><i class="fas fa-list-ol fa-lg"></i> Créer le menu de mon site</h4>
			<hr class="left account" />
    	</div>
    	<div class="col s6">
    		<div id="title" class="card-panel orange lighten-5 brown-text">
    			<h6><i class="fas fa-info-circle fa-lg"></i> C'est ici que vous allez générer le menu principal de votre site.<br />
    				Sélectionnez une page parmi celles que vous avez créées et cliquez sur ajouter !</h6>
    		</div>
    	</div>
	</div>
	<div class="row">
		<div class="col s12">
            <div class="card-panel brown-text">
                {{ form_start(form) }}

                {{ form_label(form.page_name, "Première page") }}
                {{ form_widget(form.page_name) }}


                <div class="right">
                    <button type="submit" class="waves-effect waves-light btn btn-success orange lighten-2"><i class="fas fa-paper-plane fa-lg"></i> Valider</button>
                </div>
                {{ form_end(form) }}

                {{ form_start(form2) }}

                {{ form_label(form2.page_name, "Deuxième page") }}
                {{ form_widget(form2.page_name) }}

                <div class="right">
                    <button type="submit" class="waves-effect waves-light btn btn-success orange lighten-2"><i class="fas fa-paper-plane fa-lg"></i> Valider</button>
                </div>
                {{ form_end(form2) }}
{# 
                {{ form_start(form) }}

                {{ form_widget(form.menu_rank, { "attr" : { "data" : 2 }}) }}
                {{ form_widget(form.page_name, { "attr" : { "label" : "Seconde page"}}) }}

                <div class="right">
                    <button type="submit" class="waves-effect waves-light btn btn-success orange lighten-2"><i class="fas fa-paper-plane fa-lg"></i> Valider</button>
                </div> #}
            </div>
			{% if pages is not empty %}
                <ul>
                {% for page in pages %}
                    <li>><i class="far fa-edit fa-2x"></i> {{ page.pagename }}</li>
                {% endfor %}
                </ul>
            {% endif %}
		</div>
		<div class="col s8">
		</div>
</div>

{% endblock %}

{% block specificjs %}

{% endblock %}
