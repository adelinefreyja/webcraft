<style>
    body {
    {% if css.backgroundImg is null %}
        background-color: {{ css.backgroundColor }} !important;
    {% else %}
        background-image: url({{ asset(css.backgroundImg) }}) !important;
    {% endif %}
    }

    h1, h2, h3, h4 {
        color: {{ css.textPrimaryColor }} !important;
    }

    h5, h6, p {
        color: {{ css.textSecondaryColor }} !important;
    }

    a {
        color: {{ css.linksColor }} !important;
    }

    header {
    {% if css.backgroundImg is null %}
        background-color: {{ css.headerColor }} !important;
    {% else %}
        background-image: url({{ asset(css.headerImg) }}) !important;
    {% endif %}
    }
</style>
