{% extends 'backoffice/index.html.twig' %}

{% block title %}Paramétrer ma boutique :: Webcraft :: Craft magic websites within minutes !{% endblock %}

{% block specificcss %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/setup.css') }}" />
	<link rel="stylesheet" type="text/css" href="{{ asset('css/backoffice.css') }}" />
{% endblock %}


{% block content %}
<div class="container-fluid">
	<div class="row brown-text">
		<div class="col s6">
			<h4 class="dashboard"><i class="fas fa-sliders-h fa-lg"></i> Modifier une catégorie</h4>
			<hr class="left account" />
		</div>
		<div class="col s6">
			<div class="dashboard right">
				<a href="#new_cat" data-target="new_tax"class="modal-trigger btn orange lighten-2 brown-text"><i class="far fa-plus-square fa-lg"></i> <span>Ajouter une catégorie</span></a>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col s12">
			{{ form_start(form) }}
				{% if not form.vars.valid %}
					<div class="error">
						{{ form_errors(form.tax_name) }}
						{{ form_errors(form.tax_value) }}
					</div>		
		        {% endif %}
				<div class="input-field">
					{{ form_label(form.categoryValue) }}
					{{ form_widget(form.categoryValue) }}
				</div>
		    </div>
		    <div class="right">
		    	<a href="{{ path('productcategories') }}" class="btn brown lighten-1 white-text"><i class="fas fa-chevron-circle-left fa-lg"></i> <span>Retour</span></a>
				<button type="submit" class="modal-action modal-close waves-effect waves-light btn btn-success orange lighten-2"><i class="fas fa-paper-plane fa-lg"></i> Valider</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

{% block specificjs %}
	<script type="text/javascript" src="{{ asset('js/account.js') }}"></script>
{% endblock %}
