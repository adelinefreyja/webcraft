{% extends 'backoffice/index.html.twig' %}

{% block specificcss %}
{% endblock %}


{% block content %}
<div class="container">
	<div class="row">
        <h4 class="dashboard brown-text">Ajouter un produit</h4>
        <p>Veuillez renseigner les informations suivantes</p>
        {{ form_start(form) }}
            <div class="input-field">
                {{ form_label(form.product.productName) }}
                {{ form_widget(form.product.productName) }}
            </div>
            <div class="input-field">
                {{ form_label(form.product.productDescription) }}
                {{ form_widget(form.product.productDescription) }}
            </div>
            <div class="input-field">
                {{ form_label(form.product.productPrice) }}
                {{ form_widget(form.product.productPrice) }}
            </div>
            <div class="input-field">
                {{ form_label(form.product.productSale) }}
                {{ form_widget(form.product.productSale) }}
            </div>
             <div class="file-field input-field">
                 <div class="btn">
                     <span>Transmettre un fichier</span>
                     {{ form_widget(form.image) }}
                 </div>
                 <div class="file-path-wrapper">
                     <input class="file-path validate" type="text">
                 </div>
            </div>
            <div class="right">
                <button type="submit" class="waves-effect waves-light btn btn-success orange lighten-2"><i class="fas fa-paper-plane fa-lg"></i> Valider</button>
            </div>
        {{ form_end(form) }}
	</div>
</div>
{% endblock %}

{% block specificjs %}
{% endblock %}
