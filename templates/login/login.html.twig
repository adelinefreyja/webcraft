{% extends ('setup/setup.html.twig') %}

{% block content %}
    {% block contentTitle %}
        <div class="title center-align">
            <i class="far fa-smile fa-3x"></i>
            <h4>:: Connectez-vous ::</h4>
            <hr>
        </div>
    {% endblock %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <div class="input-field">
            <label for="username">Pseudo</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div class="input-field">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" />
        </div>
        <input type="hidden" name="_target_path" value="{{ path('dashboard') }}" />

        <button type="submit" class="right waves-effect waves-light btn orange lighten-2"><i class="fas fa-sign-in-alt fa-lg"></i> Se connecter</button>
    </form>
{% endblock %}