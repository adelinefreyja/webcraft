{% extends ('front/ColoShop/base.html.twig') %}
{% block content %}
<div style="height:50px!important;"></div>
<div class="container">
<div class="col-sm-12">
		<div class="title center-align">
			
			<h4><i class="fa fa-user fa-2x"></i> Cr√©ez votre compte</h4>
			<hr>
		</div>

<form>
	{{ form_start(form) }}
		{% if not form.vars.valid %}
			<div class="error">
				{{ form_errors(form.username) }}
				{{ form_errors(form.user_email.first) }}
				{{ form_errors(form.user_email.second) }}
				{{ form_errors(form.password.first) }}
				{{ form_errors(form.password.second) }}
				{{ form_errors(form.user_first_name) }}
				{{ form_errors(form.user_last_name) }}
				{{ form_errors(form.user_gender) }}
			</div>		
        {% endif %}

		<div class="form-group">
			{{ form_label(form.username) }}

			{{ form_widget(form.username, {"attr" : { "class" : "form-control"}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.user_email.first) }}
			{{ form_widget(form.user_email.first, {"attr" : { "class" : "form-control"}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.user_email.second) }}
			{{ form_widget(form.user_email.second, {"attr" : { "class" : "form-control"}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.password.first) }}
			{{ form_widget(form.password.first, {"attr" : { "class" : "form-control"}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.password.second) }}
			{{ form_widget(form.password.second, {"attr" : { "class" : "form-control"}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.user_first_name) }}
			{{ form_widget(form.user_first_name, {"attr" : { "class" : "form-control"}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.user_last_name) }}
			{{ form_widget(form.user_last_name, {"attr" : { "class" : "form-control"}}) }}
		</div>
		<div class="form-check">
			{{ form_label(form.user_gender) }}
			{{ form_widget(form.user_gender, {"attr" : { "class" : "form-check"}}) }}
		</div>
		<div class="right">
			<button type="submit" class="waves-effect waves-light btn btn-success btn-block orange lighten-2"><i class="fas fa-paper-plane fa-lg"></i>Valider</button>
		</div>
	{{ form_end(form) }}
</form>
</div>
</div>
{% endblock %}