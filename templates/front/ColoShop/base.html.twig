<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="Colo Shop Template">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{% block title %}{% endblock %}</title>
	{% block stylesheets %}
		<link rel="stylesheet" type="text/css" href="{{ asset('ColoShop/styles/bootstrap4/bootstrap.min.css') }}">
		<link rel="stylesheet" href="{{ asset('ColoShop/plugins/themify-icons/themify-icons.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('ColoShop/plugins/jquery-ui-1.12.1.custom/jquery-ui.css') }}">		
        <link href="{{ asset('ColoShop/plugins/font-awesome-4.7.0/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
		<link rel="stylesheet" type="text/css" href="{{ asset('ColoShop/plugins/OwlCarousel2-2.2.1/owl.carousel.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('ColoShop/plugins/OwlCarousel2-2.2.1/owl.theme.default.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('ColoShop/plugins/OwlCarousel2-2.2.1/animate.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('ColoShop/styles/main_styles.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('ColoShop/styles/responsive.css') }}">
	{% endblock %}
	
	{% block specificcss %}
	{% endblock %}
</head>

	<body>

		<div class="super_container">

			<!-- Header -->

			<header class="header trans_300">

				<!-- Top Navigation -->

				<div class="top_nav">
			<div class="container">
				<div class="row">
					{% if app.user %}
					<div class="col-md-6">
						<div class="top_nav_left">Bonjour : {{ app.user.username }}</div>
					</div>
				{% else %}
					<div class="col-md-6">
					</div>
					{% endif %}
					<div class="col-md-6 text-right">
						<div class="top_nav_right">
							<ul class="top_nav_menu">
								<!-- Currency / Language / My Account -->					
								<li class="account">
									<a href="#">
										Mon Compte
										<i class="fa fa-angle-down"></i>
									</a>
									{% if app.user %}
										<ul class="account_selection">
										<li><a href="{{ path('sitepublic',{'category_name':'Profil'})}}"><i class="fa fa-sign-in" aria-hidden="true"></i>Mon Profil</a></li>
										<li><a href="{{ path('sitepublic',{'category_name':'Deconnexion'})}}"><i class="fa fa-user-plus" aria-hidden="true"></i>Déconnexion</a></li>
									</ul>
									{% else %}
									<ul class="account_selection">
										<li><a href="{{ path('sitepublic',{'category_name':'Signin'})}}"><i class="fa fa-sign-in" aria-hidden="true"></i>Connexion</a></li>
										<li><a href="{{ path('sitepublic',{'category_name':'Register'})}}"><i class="fa fa-user-plus" aria-hidden="true"></i>Inscription</a></li>
									</ul>
									{% endif %}
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>

				<!-- Main Navigation -->

				<div class="main_nav_container">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 text-right">
						<div class="logo_container">
							<img style="width:50px;" src="{{ asset('img/logo.png') }}">
							<a href="{{ path('sitepublic',{'category_name':'Accueil'})}}">WEBCRAFT</a>
						</div>
						<nav class="navbar">
							<ul class="navbar_menu">
								<li><a href="{{ path('sitepublic',{'category_name':'Accueil'})}}">Accueil</a></li>
								<li><a href="{{ path('sitepublic',{'category_name':'Boutique'})}}">Boutique</a></li>
								<li><a href="{{ path('sitepublic',{'category_name':'Pages'})}}">Pages</a></li>
								<li><a href="{{ path('sitepublic',{'category_name':'Contact'})}}">Contact</a></li>
							</ul>
							<ul class="navbar_user">
								<li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
								<li><a href="#"><i class="fa fa-user" aria-hidden="true"></i></a></li>
								<li class="checkout">
									<a href="#">
										<i class="fa fa-shopping-cart" aria-hidden="true"></i>
										<span id="checkout_items" class="checkout_items">2</span>
									</a>
								</li>
							</ul>
							<div class="hamburger_container">
								<i class="fa fa-bars" aria-hidden="true"></i>
							</div>
						</nav>
					</div>
				</div>
			</div>
		</div>

			</header>

			<div class="fs_menu_overlay"></div>

			<div class="hamburger_menu">
		<div class="hamburger_close"><i class="fa fa-times" aria-hidden="true"></i></div>
		<div class="hamburger_menu_content text-right">
			<ul class="menu_top_nav">
				<li class="menu_item has-children">
					<a href="#">
						Mon Compte
						<i class="fa fa-angle-down"></i>
					</a>

					{% if app.user %}
					<ul class="menu_selection">
						<li><a href="{{ path('sitepublic',{'category_name':'Profil'})}}"><i class="fa fa-sign-in" aria-hidden="true"></i>Mon Profil</a></li>
						<li><a href="{{ path('sitepublic',{'category_name':'Deconnexion'})}}"><i class="fa fa-user-plus" aria-hidden="true"></i>Déconnexion</a></li>
					</ul>
					{% else %}
					<ul class="menu_selection">
						<li><a href="{{ path('sitepublic',{'category_name':'Signin'})}}"><i class="fa fa-sign-in" aria-hidden="true"></i>Connexion</a></li>
						<li><a href="{{ path('sitepublic',{'category_name':'Register'})}}"><i class="fa fa-user-plus" aria-hidden="true"></i>Inscription</a></li>
					</ul>
					{% endif %}
				</li>
				<li class="menu_item">li><a href="{{ path('sitepublic',{'category_name':'Accueil'})}}">Accueil</a></li>								
				<li class="menu_item"><a href="{{ path('sitepublic',{'category_name':'Boutique'})}}">Boutique</a></li>
				<li class="menu_item"><a href="{{ path('sitepublic',{'category_name':'Pages'})}}">Pages</a></li>
				<li class="menu_item"><a href="{{ path('sitepublic',{'category_name':'Contact'})}}">Contact</a></li>
			</ul>
		</div>
	</div>
			

			{% block content %}
			{% endblock %}
			<!-- Newsletter -->

			<div class="newsletter">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center">
						<h4>Newsletter</h4>
						<p>Subscribe to our newsletter and get 20% off your first purchase</p>
					</div>
				</div>
				<div class="col-lg-6">
						{% block newsletter %}
						<div class="newsletter_form d-flex flex-md-row flex-column flex-xs-column align-items-center justify-content-lg-end justify-content-center">
							{{ form_start(newsletterform) }}						  
						            {{ form_label(newsletterform.emailValue) }}
						            {{ form_widget(newsletterform.emailValue) }}					            
							<button id="newsletter_submit" type="submit" class="newsletter_submit_btn trans_300" value="Submit">subscribe</button>
							{{ form_end(newsletterform) }}
							{% endblock %}
						</div>
				</div>
			</div>
		</div>
	</div>

			<!-- Footer -->

			<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
						<ul class="footer_nav">
							<li><a href="#">Blog</a></li>
							<li><a href="#">FAQs</a></li>
							<li><a href="{{ path('sitepublic',{'category_name':'Contact'})}}">Contact</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
						<ul>
							<li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="footer_nav_container">
						<div class="cr"><a href="#">WebCraft</a></div>
					</div>
				</div>
			</div>
		</div>
	</footer>

			</div>

		{% block javascripts %}
        <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCIwF204lFZg1y4kPSIhKaHEXMLYxxuMhA"></script>
		<script src="{{ asset('ColoShop/js/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('ColoShop/plugins/jquery-ui-1.12.1.custom/jquery-ui.js') }}"></script>
		<script src="{{ asset('ColoShop/styles/bootstrap4/popper.js') }}"></script>
		<script src="{{ asset('ColoShop/styles/bootstrap4/bootstrap.min.js') }}"></script>
		<script src="{{ asset('ColoShop/plugins/Isotope/isotope.pkgd.min.js') }}"></script>
		<script src="{{ asset('ColoShop/plugins/OwlCarousel2-2.2.1/owl.carousel.js') }}"></script>
		<script src="{{ asset('ColoShop/plugins/easing/easing.js') }}"></script>
		<script src="{{ asset('ColoShop/js/custom.js') }}"></script>
		<script src="{{ asset('ColoShop/js/categories_custom.js') }}"></script>
		{% endblock %}

        {% block specificjs %}
        {% endblock %}
	</body>
</html>